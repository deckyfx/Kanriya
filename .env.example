# Example environment configuration for GraphQL Server
# Copy this file to .env and customize the values

# Server Configuration
APP_IP=0.0.0.0
APP_PORT=10000
ASPNETCORE_ENVIRONMENT=Development

# PostgreSQL Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=mydatabase

# Database Connection
# Use 'localhost' when running the app locally (dotnet run)
# Use 'db' when running the app in Docker container
POSTGRES_HOST=localhost
POSTGRES_PORT=10005

# pgAdmin Configuration (for docker-compose)
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_LISTEN_PORT=10080

# JWT Configuration
JWT__Secret=YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!
JWT__Issuer=YourGraphQLServer
JWT__Audience=YourGraphQLClient
JWT__ExpirationMinutes=60

# API Keys (examples)
# EXTERNAL_API_KEY=your-api-key-here
# WEBHOOK_SECRET=your-webhook-secret