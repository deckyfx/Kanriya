@{
    var title = ViewData["Title"] as string ?? "GQLServer";
    var description = ViewData["Description"] as string ?? "GraphQL API Server with Authentication";
}
<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    <meta name="description" content="@description">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="manifest" href="/site.webmanifest">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/app.min.css">
    
    <!-- Theme -->
    <meta name="theme-color" content="#667eea">
</head>
<body class="h-full bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32" class="w-8 h-8">
                            <rect width="32" height="32" rx="6" fill="#667eea"/>
                            <text x="16" y="24" font-family="Arial, sans-serif" font-size="20" font-weight="bold" text-anchor="middle" fill="white">G</text>
                        </svg>
                        <span class="text-xl font-bold text-gray-900">GQLServer</span>
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-4">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                    <a asp-controller="Home" asp-action="About" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">About</a>
                    <a href="@Url.Content("~/graphql")" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">GraphQL</a>
                    <a href="@Url.Content("~/swagger")" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">API Docs</a>
                    
                    @if (ViewData["IsAuthenticated"] as bool? == true)
                    {
                        <a asp-controller="Account" asp-action="Profile" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">Profile</a>
                        <a asp-controller="Account" asp-action="Logout" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">Logout</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Sign Up</a>
                    }
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <!-- Icon when menu is closed -->
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                        <!-- Icon when menu is open -->
                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Home</a>
                <a asp-controller="Home" asp-action="About" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">About</a>
                <a href="@Url.Content("~/graphql")" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">GraphQL</a>
                <a href="@Url.Content("~/swagger")" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">API Docs</a>
                
                @if (ViewData["IsAuthenticated"] as bool? == true)
                {
                    <a asp-controller="Account" asp-action="Profile" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Profile</a>
                    <a asp-controller="Account" asp-action="Logout" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary w-full">Sign Up</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">GQLServer</h3>
                    <p class="text-gray-400">A modern GraphQL API server built with .NET and HotChocolate</p>
                </div>
                
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="@Url.Content("~/graphql")" class="text-gray-400 hover:text-white">GraphQL Playground</a></li>
                        <li><a href="@Url.Content("~/swagger")" class="text-gray-400 hover:text-white">API Documentation</a></li>
                        <li><a href="@Url.Content("~/health")" class="text-gray-400 hover:text-white">Health Check</a></li>
                    </ul>
                </div>
                
                <div>
                    <h4 class="text-lg font-semibold mb-4">Resources</h4>
                    <ul class="space-y-2">
                        <li><a href="https://chillicream.com/docs/hotchocolate" target="_blank" rel="noopener" class="text-gray-400 hover:text-white">HotChocolate Docs</a></li>
                        <li><a href="https://graphql.org/" target="_blank" rel="noopener" class="text-gray-400 hover:text-white">GraphQL.org</a></li>
                        <li><a href="https://github.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white">GitHub</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="mt-8 pt-8 border-t border-gray-700 text-center">
                <p class="text-gray-400">&copy; @DateTime.Now.Year GQLServer. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/js/vendor.bundle.js"></script>
    <script src="/js/app.bundle.js"></script>
    
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        
        if (currentController == "home" && currentAction == "index")
        {
            <script src="/js/home.bundle.js"></script>
        }
        else if (currentController == "home" && currentAction == "about")
        {
            <script src="/js/about.bundle.js"></script>
        }
    }
    
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>