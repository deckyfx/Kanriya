@model HomeViewModel
@{
    ViewData["Title"] = "GQLServer - GraphQL API with HotChocolate";
    ViewData["Description"] = "Modern GraphQL API Server powered by HotChocolate";
}

<div class="space-y-8">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl p-12 text-white text-center">
        <h1 class="text-5xl font-bold mb-4">ðŸš€ @Model.Title</h1>
        <p class="text-xl mb-2">@Model.Description</p>
        <div class="inline-block bg-white/20 rounded-full px-4 py-2 mt-4">
            <span class="text-sm">Version @Model.Version</span>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="grid md:grid-cols-2 gap-4">
        <a href="@Model.GraphQLEndpoint" class="btn btn-primary text-center" data-action="open-graphql">
            Open GraphQL Playground â†’
        </a>
        <a href="@Model.SwaggerEndpoint" class="btn btn-outline text-center" data-action="open-swagger">
            Open Swagger UI â†’
        </a>
    </div>
    
    <!-- Test Button -->
    <div class="text-center">
        <button id="home-test-button" class="btn btn-primary">
            Test Page Alert (Home)
        </button>
    </div>

    <!-- Endpoints Card -->
    <div class="card">
        <h2 class="text-2xl font-bold mb-4">Available Endpoints</h2>
        <div class="space-y-2">
            @foreach (var endpoint in Model.Endpoints)
            {
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <span class="font-semibold text-primary-600">@endpoint.Label</span>
                    <code class="text-sm text-gray-600 font-mono">@endpoint.Path</code>
                </div>
            }
        </div>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        @foreach (var feature in Model.Features)
        {
            <div class="card text-center hover:shadow-lg transition-shadow feature-card">
                <div class="text-4xl mb-2">@feature.Icon</div>
                <div class="text-sm font-medium text-gray-700">@feature.Name</div>
            </div>
        }
    </div>

    <!-- Code Example -->
    <div class="bg-gray-900 text-gray-300 rounded-lg p-6 overflow-x-auto code-example">
        <h3 class="text-lg font-semibold text-white mb-4">Example GraphQL Queries</h3>
        <pre class="text-sm"><code># Query for greet logs
query GetGreetLogs {
  greetLogs(first: 10) {
    nodes {
      id
      message
      timestamp
    }
  }
}

# Create a new greet log
mutation CreateGreetLog {
  createGreetLog(message: "Hello, GraphQL!") {
    id
    message
    timestamp
  }
}

# Subscribe to changes
subscription OnGreetLogChanges {
  onGreetLogChanged {
    event
    document {
      id
      message
    }
    time
  }
}</code></pre>
    </div>
</div>