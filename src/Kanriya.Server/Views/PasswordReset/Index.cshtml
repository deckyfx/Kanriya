@model Kanriya.Server.ViewModels.PasswordResetViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-6 py-4">
                <h1 class="text-2xl font-bold text-white text-center">Reset Your Password</h1>
            </div>
            
            <div class="p-6">
                @if (Model.Success)
                {
                    <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-green-700">
                                    @Model.Message
                                </p>
                                <div class="mt-4">
                                    <a href="/graphql" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                        Go to Login
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">
                                    @Model.Message
                                </p>
                            </div>
                        </div>
                    </div>
                }
                
                @if (!Model.Success && !string.IsNullOrEmpty(Model.Token))
                {
                    <form method="post" action="/reset-password" class="space-y-6">
                        <input type="hidden" name="Token" value="@Model.Token" />
                        
                        <div>
                            <label for="NewPassword" class="block text-sm font-medium text-gray-700">
                                New Password
                            </label>
                            <div class="mt-1">
                                <input asp-for="NewPassword" type="password" required 
                                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                                <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                            </div>
                            <p class="mt-1 text-xs text-gray-500">
                                Must be at least 8 characters with uppercase, lowercase, and number
                            </p>
                        </div>
                        
                        <div>
                            <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                                Confirm Password
                            </label>
                            <div class="mt-1">
                                <input asp-for="ConfirmPassword" type="password" required 
                                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                            </div>
                        </div>
                        
                        <div>
                            <button type="submit" 
                                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Reset Password
                            </button>
                        </div>
                    </form>
                }
                else if (string.IsNullOrEmpty(Model.Token))
                {
                    <div class="text-center">
                        <p class="text-gray-600 mb-4">
                            No reset token provided. Please use the link from your email.
                        </p>
                        <a href="/graphql" class="text-indigo-600 hover:text-indigo-500">
                            Return to Login
                        </a>
                    </div>
                }
            </div>
        </div>
        
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-600">
                Remember your password? 
                <a href="/graphql" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Sign in
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}