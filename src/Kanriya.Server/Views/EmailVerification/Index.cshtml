@model EmailVerificationViewModel
@{
    ViewData["Title"] = "Email Verification - GQLServer";
    ViewData["Description"] = "Email verification status";
    
    var statusIcon = Model.Success ? "✅" : "❌";
    var statusText = Model.Success ? "SUCCESS" : "FAILED";
    var statusColor = Model.Success ? "text-green-600" : "text-red-600";
    var statusBg = Model.Success ? "bg-green-100" : "bg-red-100";
    var actionLink = Model.Success ? "/graphql" : "/graphql";
    var actionText = Model.Success ? "Sign In" : "Try Again";
}

<div class="max-w-md mx-auto">
    <div class="card text-center">
        <!-- Status Icon -->
        <div class="text-6xl mb-4">@statusIcon</div>
        
        <!-- Title -->
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Email Verification</h1>
        
        <!-- Status Badge -->
        <div class="inline-block mb-6">
            <span class="@statusBg @statusColor px-4 py-2 rounded-full font-semibold text-sm">
                @statusText
            </span>
        </div>
        
        <!-- Message -->
        <p class="text-gray-600 mb-6">@Model.Message</p>
        
        @if (Model.Success && !string.IsNullOrEmpty(Model.UserEmail))
        {
            <p class="text-primary-600 font-semibold mb-6">Email: @Model.UserEmail</p>
        }
        
        <!-- Next Steps -->
        <p class="text-gray-600 mb-8">
            @if (Model.Success)
            {
                <text>You can now <a href="/graphql" class="text-primary-600 font-semibold hover:underline">sign in</a> to your account.</text>
            }
            else
            {
                <text>Please check your email or <a href="/graphql" class="text-primary-600 font-semibold hover:underline">request a new verification link</a>.</text>
            }
        </p>
        
        <!-- Action Buttons -->
        <div class="flex gap-4 justify-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline">
                Go to Home
            </a>
            <a href="@actionLink" class="btn btn-primary">
                @actionText
            </a>
        </div>
    </div>
</div>