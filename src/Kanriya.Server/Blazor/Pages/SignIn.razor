@code {
    private PrincipalSignInModel principalModel = new();
    private BrandSignInModel brandModel = new();
    private bool isBrandMode = false;
    private bool isSubmitting = false;
    private string? errorMessage;
    private bool isSuccess = false;
    private bool mockMode = false;
    private string selectedLang = "en";
    private bool showPassword = false;
    private bool showValidation = false;
    private string? userFullName = null;
    
    public class PrincipalSignInModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; }
    }
    
    public class BrandSignInModel
    {
        public string BrandId { get; set; } = string.Empty;
        public string ApiKey { get; set; } = string.Empty;
        public string ApiPassword { get; set; } = string.Empty;
        public bool RememberMe { get; set; }
    }
    
    private bool IsValidEmail(string email)
    {
        if (string.IsNullOrEmpty(email)) return false;
        return new EmailAddressAttribute().IsValid(email);
    }
    
    protected override void OnInitialized()
    {
        // Check for query parameters
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        
        if (query["mock"] == "true")
        {
            mockMode = true;
        }
        
        if (!string.IsNullOrEmpty(query["lang"]))
        {
            selectedLang = query["lang"]!;
            LocalizationService.Instance.SetLanguage(selectedLang);
        }
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if user is already authenticated
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                Navigation.NavigateTo("/console", forceLoad: true);
            }
        }
        
        await base.OnAfterRenderAsync(firstRender);
    }
    
    private void ToggleMode()
    {
        isBrandMode = !isBrandMode;
        showValidation = false;
        errorMessage = null;
    }
    
    private async Task HandlePrincipalSignIn()
    {
        if (isSubmitting) return;
        
        showValidation = true;
        
        // Client-side validation
        if (string.IsNullOrEmpty(principalModel.Email) || !IsValidEmail(principalModel.Email) || string.IsNullOrEmpty(principalModel.Password))
        {
            return;
        }
        
        isSubmitting = true;
        errorMessage = null;
        isSuccess = false;
        
        try
        {
            if (mockMode)
            {
                // Mock mode - simulate successful sign in
                await Task.Delay(1000); // Simulate network delay
                
                // Set language for mock mode
                var currentLang = LocalizationService.Instance.CurrentLanguage;
                if (!string.IsNullOrEmpty(selectedLang) && selectedLang != currentLang)
                {
                    LocalizationService.Instance.SetLanguage(selectedLang);
                }
                
                // Show success view
                isSuccess = true;
                StateHasChanged();
                
                // Wait a moment to show the success message
                await Task.Delay(1500);
                
                // Create a mock JWT token for principal
                var mockToken = GenerateMockPrincipalToken(principalModel.Email);
                
                // Mark user as authenticated
                await AuthStateProvider.MarkUserAsAuthenticated(mockToken);
                
                // Navigate to console
                NavigateAfterSignIn();
            }
            else
            {
                // Real sign in with query parameters
                var options = new RequestOptions
                {
                    Lang = selectedLang,
                    SkipEmail = false
                };
                
                var result = await UserService.SignInAsync(
                    principalModel.Email,
                    principalModel.Password,
                    null, // No brand ID for principal
                    options
                );
                
                if (result.Success && !string.IsNullOrEmpty(result.Token))
                {
                    // Store user's full name if available
                    if (result.User != null)
                    {
                        userFullName = $"{result.User.FirstName} {result.User.LastName}".Trim();
                    }
                    
                    // Show success view
                    isSuccess = true;
                    StateHasChanged();
                    
                    // Wait a moment to show the success message
                    await Task.Delay(1500);
                    
                    // Mark user as authenticated
                    await AuthStateProvider.MarkUserAsAuthenticated(result.Token);
                    
                    // Store the principal credential
                    var principalCredential = new StoredCredential
                    {
                        Type = "principal",
                        DisplayName = result.User != null ? $"{result.User.FirstName} {result.User.LastName}".Trim() : principalModel.Email,
                        Email = result.User?.Email ?? principalModel.Email,
                        Token = result.Token,
                        IsActive = true
                    };
                    await CredentialManager.AddCredentialAsync(principalCredential);
                    
                    if (principalModel.RememberMe)
                    {
                        // Store remember me preference
                        await JS.InvokeVoidAsync("localStorage.setItem", "rememberMe", "true");
                    }
                    
                    NavigateAfterSignIn();
                }
                else
                {
                    errorMessage = result.Message;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private async Task HandleBrandSignIn()
    {
        if (isSubmitting) return;
        
        showValidation = true;
        
        // Client-side validation
        if (string.IsNullOrEmpty(brandModel.BrandId) || string.IsNullOrEmpty(brandModel.ApiKey) || string.IsNullOrEmpty(brandModel.ApiPassword))
        {
            return;
        }
        
        isSubmitting = true;
        errorMessage = null;
        isSuccess = false;
        
        try
        {
            if (mockMode)
            {
                // Mock mode - simulate successful sign in
                await Task.Delay(1000); // Simulate network delay
                
                // Set language for mock mode
                var currentLang = LocalizationService.Instance.CurrentLanguage;
                if (!string.IsNullOrEmpty(selectedLang) && selectedLang != currentLang)
                {
                    LocalizationService.Instance.SetLanguage(selectedLang);
                }
                
                // Show success view
                isSuccess = true;
                StateHasChanged();
                
                // Wait a moment to show the success message
                await Task.Delay(1500);
                
                // Create a mock JWT token for brand
                var mockToken = GenerateMockBrandToken(brandModel.BrandId, brandModel.ApiKey);
                
                // Mark user as authenticated
                await AuthStateProvider.MarkUserAsAuthenticated(mockToken);
                
                // Navigate to console
                NavigateAfterSignIn();
            }
            else
            {
                // Real brand sign in with query parameters
                var options = new RequestOptions
                {
                    Lang = selectedLang,
                    SkipEmail = false
                };
                
                var result = await UserService.SignInAsync(
                    brandModel.ApiKey,      // API key as username
                    brandModel.ApiPassword, // API password
                    brandModel.BrandId,     // Brand ID for context
                    options
                );
                
                if (result.Success && !string.IsNullOrEmpty(result.Token))
                {
                    // Show success view
                    isSuccess = true;
                    StateHasChanged();
                    
                    // Wait a moment to show the success message
                    await Task.Delay(1500);
                    
                    // Mark user as authenticated
                    await AuthStateProvider.MarkUserAsAuthenticated(result.Token);
                    
                    // Store the brand credential
                    var brandCredential = new StoredCredential
                    {
                        Type = "brand",
                        DisplayName = brandModel.BrandId, // Will be updated with brand name later
                        Email = "", // Brand credentials don't have email
                        BrandId = brandModel.BrandId,
                        BrandName = brandModel.BrandId, // Will be updated with actual name later
                        ApiKey = brandModel.ApiKey,
                        ApiPassword = brandModel.ApiPassword,
                        Token = result.Token,
                        IsActive = true
                    };
                    await CredentialManager.AddCredentialAsync(brandCredential);
                    
                    if (brandModel.RememberMe)
                    {
                        // Store remember me preference
                        await JS.InvokeVoidAsync("localStorage.setItem", "rememberMe", "true");
                    }
                    
                    NavigateAfterSignIn();
                }
                else
                {
                    errorMessage = result.Message;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private void NavigateAfterSignIn()
    {
        // Check for return URL
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var returnUrl = query["returnUrl"];
        
        if (!string.IsNullOrEmpty(returnUrl))
        {
            // Force a full page reload to ensure authentication is recognized
            Navigation.NavigateTo(Uri.UnescapeDataString(returnUrl), forceLoad: true);
        }
        else
        {
            // Force a full page reload to ensure authentication is recognized
            Navigation.NavigateTo("/console", forceLoad: true);
        }
    }
    
    
    private string GetQueryString()
    {
        var parameters = new List<string>();
        
        if (mockMode)
            parameters.Add("mock=true");
            
        if (selectedLang != "en")
            parameters.Add($"lang={selectedLang}");
        
        return parameters.Any() ? "?" + string.Join("&", parameters) : "";
    }
    
    private string GenerateMockPrincipalToken(string email)
    {
        // This is a mock JWT token for development
        // In production, this would come from the server
        var header = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes("{\"alg\":\"HS256\",\"typ\":\"JWT\"}"));
        
        var payloadObj = new
        {
            sub = "mock-user-id",
            email = email,
            nameid = "mock-user-id",
            exp = DateTimeOffset.UtcNow.AddHours(24).ToUnixTimeSeconds(),
            iat = DateTimeOffset.UtcNow.ToUnixTimeSeconds()
        };
        
        var payloadJson = System.Text.Json.JsonSerializer.Serialize(payloadObj);
        var payload = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(payloadJson));
        var signature = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes("mock-signature"));
        
        return $"{header}.{payload}.{signature}";
    }
    
    private string GenerateMockBrandToken(string brandId, string apiKey)
    {
        // This is a mock JWT token for development
        // In production, this would come from the server
        var header = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes("{\"alg\":\"HS256\",\"typ\":\"JWT\"}"));
        
        var payloadObj = new
        {
            sub = "mock-brand-user-id",
            nameid = "mock-brand-user-id",
            brand_id = brandId,
            brand_schema = $"brand_{brandId.Replace("-", "_")}",
            token_type = "BRAND",
            api_key = apiKey,
            exp = DateTimeOffset.UtcNow.AddHours(24).ToUnixTimeSeconds(),
            iat = DateTimeOffset.UtcNow.ToUnixTimeSeconds()
        };
        
        var payloadJson = System.Text.Json.JsonSerializer.Serialize(payloadObj);
        var payload = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(payloadJson));
        var signature = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes("mock-signature"));
        
        return $"{header}.{payload}.{signature}";
    }
}